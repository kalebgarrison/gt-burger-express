<div class="container">
    <div class="row justify-content-center">
        <div class="col justify-content-center title">
            <img src="/assets/img/burger-dribble.gif" alt="Burger" class="img-responsive rounded mx-auto d-block">
            <h1 class="text-center">Eat-Da-Burgers!</h1>
        </div>
    </div>
    <div class="row justify-content-center">
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-6 justify-content-center">
        <h2>Here are your Burgers!</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li class="list-group-item" id="newBurger">
                {{this.burger_name}}
                <button type="button" class="btn btn-success btn-sm devoured" id="devouredBtn"
                    data-burgerId="{{this.id}}">Devour</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-6 justify-content-center">
        <h2>Devoured Burgers!</h2>
        <ol>
            {{#each burgers}}
            {{#if devoured}}
            <li class="list-group-item" id="eaten">
                {{this.burgers}}
            </li>
            {{/if}}
            {{/each}}
        </ol>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col justify-content-center">
        <h2>Add more Burgers!</h2>
        <form class="create-form">
            <div class="form-group">
                <input type="text" id="btn" name="burger_name" placeholder="New Burger">
                <button type="submit" class="btn btn-success btn-sm" id="addBtn">Add</button>
            </div>
        </form>
    </div>
</div>
</div>